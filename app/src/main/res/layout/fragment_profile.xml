<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/basicInfo"
        android:fontFamily="@font/cairo"
        android:text="Basic Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/colorNavText"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="75sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameText"
            android:fontFamily="@font/cairo"
            android:text="    Name: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/name"
            android:fontFamily="@font/cairo"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/heightText"
            android:fontFamily="@font/cairo"
            android:text="    Height: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/height"
            android:fontFamily="@font/cairo"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/weightText"
            android:fontFamily="@font/cairo"
            android:text="    Weight: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/weightPounds"
            android:fontFamily="@font/cairo"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/birthDateText"
            android:fontFamily="@font/cairo"
            android:text="    Birth date: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/birthDate"
            android:fontFamily="@font/cairo"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/statistics"
        android:fontFamily="@font/cairo"
        android:text="Statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/colorNavText"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/minStepsText"
            android:fontFamily="@font/cairo"
            android:text="    Minimum steps (day): "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/minSteps"
            android:fontFamily="@font/cairo"
            android:text="  0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/avgStepsText"
            android:fontFamily="@font/cairo"
            android:text="    Average steps (day): "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/avgSteps"
            android:fontFamily="@font/cairo"
            android:text="  0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/maxStepsText"
            android:fontFamily="@font/cairo"
            android:text="    Maximum steps (day): "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/maxSteps"
            android:fontFamily="@font/cairo"
            android:text="  0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/maizenChallengesText"
            android:fontFamily="@font/cairo"
            android:text="    Maizen challenges completed: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/maizenChallenges"
            android:fontFamily="@font/cairo"
            android:text="  0 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userChallengesText"
            android:fontFamily="@font/cairo"
            android:text="    User-created challenges completed: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userChallenges"
            android:fontFamily="@font/cairo"
            android:text="  0 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNavText"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>