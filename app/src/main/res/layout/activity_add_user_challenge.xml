<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/add_user_challenge_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo"
                android:gravity="center_horizontal"
                android:text="Activity"
                android:textColor="@color/colorNavText"
                android:textSize="40sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/activity_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/activity"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher" />


        </RelativeLayout>


        <TextView
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:padding="10sp"
            android:textColor="@color/colorNavText"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/time_of_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo"
            android:padding="10sp"
            android:paddingTop="10sp"
            android:textColor="@color/colorNavText"
            android:textSize="18sp"
            android:textStyle="italic" />


        <Button
            android:id="@+id/accept_user_challenge"
            style="@style/FirebaseUI.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="25dp"
            android:background="@color/colorNavText"
            android:fontFamily="@font/cairo"
            android:text="Accept Challenge"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/browser_actions_bg_grey"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</LinearLayout>